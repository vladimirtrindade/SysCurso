@model ContatoViewModel

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes do contato</h2>

<form>

    <input asp-for="Id" hidden />

    <div class="form-group">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Sobrenome" class="form-label"></label>
        <input asp-for="Sobrenome" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" disabled />
    </div>

    <div class="form-group">
        <a asp-controller="Contato" asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>

</form>